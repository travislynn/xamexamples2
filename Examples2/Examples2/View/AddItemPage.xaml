<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examples2.View.AddItemPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Title}" />

            <Label Text="{Binding EntryErrors}"></Label>
            
            <Entry x:Name="FirstNameEntry"
                   Placeholder="First Name"
                   Text="{Binding FirstNameEntry}"></Entry>

            <Entry x:Name="LastNameEntry"
                   Placeholder="Last Name"
                   Text="{Binding LastNameEntry}"></Entry>

            <Entry x:Name="PhoneNumberEntry"
                   Placeholder="Phone Number"
                   Text="{Binding PhoneNumberEntry}"></Entry>

            <Button x:Name="AddEntryButton" Text="Add" Clicked="AddEntryButton_OnClicked"></Button>
            
            <Button Text="Go To List" x:Name="GoToListButton" Clicked="GoToListButton_OnClicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>